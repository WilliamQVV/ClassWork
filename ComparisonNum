#This code will compare user input with the set number
#It uses try/except and you win if you get the number right
the_num = 10

def main():
    print("Starting coding challenge")
    user_input = input("Enter a number(1-9): ")
    try:
        user_input = int(user_input)
    except:
        print("Not a number, try again")
    while(user_input != the_num):
        print("Try again")
        main()
    print("You win!")
    
main()
